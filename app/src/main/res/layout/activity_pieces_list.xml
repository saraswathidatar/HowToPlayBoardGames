<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.learnchess.PiecesList">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="The Pieces of Chess"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:src="@mipmap/pawn"
        android:onClick="openPawn"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pawn"
        android:id="@+id/button4"
        android:layout_alignParentEnd="true"
        android:onClick="openPawn"
        android:layout_below="@+id/textView4"
        android:layout_toEndOf="@+id/imageButton2"
        android:layout_alignBottom="@+id/imageButton2" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton3"
        android:layout_below="@+id/imageButton2"
        android:layout_alignParentStart="true"
        android:src="@mipmap/rook"
        android:onClick="openRook"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rook"
        android:id="@+id/button5"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:layout_alignBottom="@+id/imageButton3"
        android:onClick="openRook"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton4"
        android:layout_below="@+id/imageButton3"
        android:layout_alignParentStart="true"
        android:src="@mipmap/knight"
        android:onClick="openKnight"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Knight"
        android:id="@+id/button6"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/button5"
        android:layout_alignStart="@+id/button5"
        android:layout_alignBottom="@+id/imageButton4"
        android:onClick="openKnight"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton5"
        android:layout_below="@+id/imageButton4"
        android:layout_alignParentStart="true"
        android:src="@mipmap/bishop"
        android:onClick="openBishop"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bishop"
        android:id="@+id/button7"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:layout_alignBottom="@+id/imageButton5"
        android:onClick="openBishop"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton6"
        android:layout_below="@+id/imageButton5"
        android:layout_alignParentStart="true"
        android:src="@mipmap/queen"
        android:onClick="openQueen"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Queen"
        android:id="@+id/button8"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/button7"
        android:layout_alignStart="@+id/button7"
        android:layout_alignBottom="@+id/imageButton6"
        android:onClick="openQueen"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton7"
        android:layout_below="@+id/imageButton6"
        android:layout_alignParentStart="true"
        android:src="@mipmap/king"
        android:onClick="openKing"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="King"
        android:id="@+id/button9"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/button8"
        android:layout_alignStart="@+id/button8"
        android:layout_alignBottom="@+id/imageButton7"
        android:onClick="openKing"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton11"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/home"
        android:background="@null"/>
</RelativeLayout>
